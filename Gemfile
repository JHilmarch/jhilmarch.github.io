# frozen_string_literal: true

source "https://rubygems.org"

# Core site engine
gem "jekyll", "~> 4.4"

# Minimal theme with blog-ready layouts
gem "minima", "~> 2.5"

# Common plugins
gem "jekyll-feed", "~> 0.17"
gem "jekyll-seo-tag", "~> 2.8"

gem "jekyll-sass-converter", "~> 2.2"
gem 'sassc', '~> 2.4'

# Jekyll on Ruby 3 requires webrick for `jekyll serve`
group :development do
  gem "webrick", "~> 1.9"
end
